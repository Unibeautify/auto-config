{
    "compilerOptions": {
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "noUnusedLocals": true,
        "strictNullChecks": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "ES6",
        "declaration": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./src",
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "genetic-js"
        ]
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./node_modules"
    ]
}